---
export interface Props {
  className?: string[];
}

const { className } = Astro.props;

const features = [
  "—404",
  "404",
  "404",
  "404",
  "404",
  "404",
  "404",
  "404",
  "404",
];
---

<div class="relative -z-10">
  <svg viewBox="0 0 100 100" width="100" height="100">
    <path
      id="circle"
      d="M 50, 50 m -37, 0 a 37,37 0 1,1 74,0 a 37,37 0 1,1 -74,0"
      fill="none"
      stroke-width="1"></path>
    <text font-size="7">
      <textPath
        xlink:href="#circle"
        style={{ letterSpacing: "0.245em" }}
      >
        {features.join("—")}
      </textPath>
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="rotate"
        from="0 50 50"
        to="360 50 50"
        dur="100s"
        repeatCount="indefinite"></animateTransform>
    </text>
  </svg>

  <div class="outer-circle m-auto">
    <div class="outer-circle-border md:mt-16 mt-10 w-3/4 h-3/4 m-auto">
      <slot />
    </div>
    <div class="inner-circle"></div>
  </div>
</div>

<style>
  svg {
    margin-left: -30%;
    margin-top: -24.5%;
    width: 160%;
    height: 148%;
    position: absolute;
    color: #fff;
    fill: currentColor;
    transform-origin: center;
  }

  .outer-circle {
    width: 510px;
    height: 510px;
    position: relative;
    border-radius: 50%;
    background: rgb(10, 11, 18);
    background-image: radial-gradient(
      circle at center,
      transparent 0%,
      rgb(120, 231, 176, 0.2) 40%,
      rgba(10, 11, 18, 0.4) 70%,
      rgba(10, 11, 18, 0.6) 80%,
      rgba(10, 11, 18, 0.8) 90%
    );
    border: 1px solid #363636;
  }
  .outer-circle-border {
    position: relative;
    border-radius: 50%;
    background: linear-gradient(
      349deg,
      #78e7c5 45.17%,
      #70ffb8 69.45%,
      #9dffad 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .inner-circle {
    background-image: radial-gradient(rgba(103, 100, 100, 0.3) 20%, #ffffff01);
    content: "";
    position: absolute;
    top: -94px;
    bottom: -94px;
    right: -94px;
    left: -94px;
    z-index: -2;
    border-radius: inherit;
  }

  @media only screen and (max-width: 600px) {
    svg {
      margin-left: -32%;
      margin-top: -24%;
      width: 164%;
      height: 147%;
    }

    .outer-circle {
      width: 335px;
      height: 335px;
    }

    .inner-circle {
      position: absolute;
      top: -60px;
      bottom: -60px;
      right: -60px;
      left: -60px;
    }
  }
</style>
