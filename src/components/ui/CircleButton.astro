---
import { twMerge } from 'tailwind-merge'
export interface Props {
    id: string;
    href: string;
    className: string[]
    color: string
}

const { id, href, className, color = 'green' } = Astro.props;
---

<a href={href} target="_blank">
    <button id={id} class={twMerge("btn-circle z-10 w-28 h-28 lg:w-40 lg:h-40", `btn-circle-${color}`, href && 'btn-hover', className)}>
        <slot/>
    </button>
</a>

<style>
    .btn-circle {
        border-radius: 100px;
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(33px);
        text-transform: uppercase;
        transition: background-color 1.2s ease-out 100ms;
    }
    .btn-hover:hover{
        transition: background-color 1.2s ease-out 100ms;
        color: #000;
    }

    .btn-circle-green:hover {
        background-color: #a7fbd7;
    }

    .btn-circle-rose:hover {
        background-color: #EFAEFF;
    }
</style>