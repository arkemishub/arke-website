---
import Layout from '../layouts/Layout.astro';
import GradientBackground from "../components/ui/GradientBackground.astro";
import StartNowButton from '../components/home/StartNowButton/StartNowButton.astro';
import DeveloperIntroBackground from '../components/developer/developerIntroBackground/DeveloperIntroBackground.astro';
import DeliverQualityCodeBackground from '../components/developer/developerIntroBackground/DeliverQualityCodeBackground.astro';

const programmingIcons = [
    {title: 'Elixir icon', img: '/developer/icons/elixir.svg'}, 
    {title: 'JS icon', img: '/developer/icons/JS.svg'}, 
    {title: 'React icon', img: '/developer/icons/react.svg'}, 
    {title: 'Phyton icon' , img: '/developer/icons/phyton.svg'},
    {title: 'Docker icon' , img: '/developer/icons/docker.svg'}, 
    {title: 'Aws icon', img:'/developer/icons/aws.svg'}, 
    {title: 'Gcp icon', img: '/developer/icons/cloud.svg'},
    {title: 'Azure icon', img: '/developer/icons/azure.svg'},  
    {title: 'Next-js icon', img:'/developer/icons/next-js.svg'}
]
import Cursors from "../components/developers/Cursors/Cursors.astro";
---

<Layout>
    <Cursors />
	<GradientBackground />
    <h1 class="title text-4xl md:text-5xl lg:text-7xl text-center font-medium mt-40">
		The <span>collaborative</span> framework to <br/>
		shape your future</h1>
        <h2 class="px-12 text-sm lg:text-2xl mt-12 text-secondary">
            Boost your productivity and develop quality code with a<br/>
            dynamic community you can rely on
        </h2>
        <br/>
        <br/>
        <StartNowButton color="green"/>
        <div class="relative mt-48 py-24">
            <DeliverQualityCodeBackground />
            <h3 class="text-3xl md:text-4xl lg:text-5xl font-semibold h-24 flex flex-col sm:flex-row justify-center items-center"><div class="flex items-center">Choose <img src="./logos/logo_with_border.svg" class="mx-3 h-8 md:h-10 lg:h-12"> </div>to deliver quality code</h3>
            <h2 class="px-12 text-sm lg:text-2xl mt-12 text-secondary">
                The open-source Agile framework that automates repetitive tasks,<br/>
                allowing you to focus on creating high-impact, valuable code. 
            </h2>
            <div class="icon-box__container flex flex-row justify-center mt-10 w-full">
                {programmingIcons.map(icon =><div class="icon-box flex justify-center items-center"><img src={icon.img} alt={icon.title} class="h-14 w-14"/></div>)}
            </div> 
        </div>
</Layout>

<style>
.title > span {
    background: linear-gradient(90deg, #78E7C5, #9DFFAD);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.icon-box__container {
    width: 900px;
    margin: 30px auto;
    overflow-x: scroll;
}

.icon-box {
    padding-left: 20px;
    padding-right: 20px;
}

.icon-box:not(:first-child) {
    border-left-width: 1px;
    border-left-style: solid;
    border-image: linear-gradient(to bottom, rgba(0, 0, 139, 0), rgba(255, 255, 255, 0.167) ,rgba(0, 0, 139, 0)) 1;
}

</style>
