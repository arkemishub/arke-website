---
import Layout from "../layouts/Layout.astro";
import GradientBackground from "../components/ui/GradientBackground.astro";
import StartNowButton from "../components/home/StartNowButton/StartNowButton.astro";
import DeveloperIntroBackground from "../components/developer/developerIntroBackground/DeveloperIntroBackground.astro";
import RectanglesBackground from "../components/developer/developerIntroBackground/RectanglesBackground.astro";
import Card from "../components/ui/Card.astro";
import Cursors from "../components/developer/Cursors/Cursors.astro";
import Section from "../components/ui/Section.astro";
import WorkflowFeature from "../components/home/WorkflowFeature/WorkflowFeature.astro";
import FeatureCircle from "../components/home/FeatureCircle/FeatureCircle.astro";
import WorkflowStep from "../components/home/WorkflowStep/WorkflowStep.astro";
import FeatureCircleDev from "../components/developer/featureCircle/FeatureCircleDev.astro";
import FooterCta from "../components/ui/FooterCta.astro";

const programmingIcons = [
  { title: "Elixir icon", img: `${import.meta.env.BASE_URL}developer/icons/elixir.svg` },
  { title: "JS icon", img: `${import.meta.env.BASE_URL}developer/icons/JS.svg` },
  { title: "React icon", img: `${import.meta.env.BASE_URL}developer/icons/react.svg` },
  { title: "Phyton icon", img: `${import.meta.env.BASE_URL}developer/icons/phyton.svg` },
  { title: "Docker icon", img: `${import.meta.env.BASE_URL}developer/icons/docker.svg` },
  { title: "Aws icon", img: `${import.meta.env.BASE_URL}developer/icons/aws.svg` },
  { title: "Gcp icon", img: `${import.meta.env.BASE_URL}developer/icons/cloud.svg` },
  { title: "Azure icon", img: `${import.meta.env.BASE_URL}developer/icons/azure.svg` },
  { title: "Next-js icon", img: `${import.meta.env.BASE_URL}developer/icons/next-js.svg` },
];

const trustCards = [
  {
    title: "Smart development",
    img: `${import.meta.env.BASE_URL}developer/icons/peopleIcon.svg`,
    description:
      "Stop wasting your skills on repetitive tasks and focus on innovation and value generation.",
  },
  {
    title: "Knowledge share",
    img: `${import.meta.env.BASE_URL}developer/icons/puzzleIcon.svg`,
    description:
      "Promote a culture of transparency and growth through shared awareness enrichment and knowledge transfer.",
  },
  {
    title: "Code quality",
    img: `${import.meta.env.BASE_URL}developer/icons/spinIcon.svg`,
    description:
      "Develop reliable, maintainable, and efficient software to improve the user experience and have a posive impact on the world.",
  },
];

const improveCards = [
  {
    title: "Smart development",
    img: `${import.meta.env.BASE_URL}developer/icons/peopleIcon.svg`,
    description:
      "Boost your applications with our state-of-the-art backend infrastructure to optimize and scale performance.",
  },
  {
    title: "Knowledge share",
    img: `${import.meta.env.BASE_URL}developer/icons/puzzleIcon.svg`,
    description:
      "Choose ready-to-use UI components and APIs or enjoy the freedom to customize them to fit your unique needs.",
  },
  {
    title: "Code quality",
    img: `${import.meta.env.BASE_URL}developer/icons/spinIcon.svg`,
    description:
      "Test ideas, standardize processes and develop your prototypes without writing a single line of code.",
  },
];

const collaborateSection = [
  {
    title: "Continuous connection",
    content:
      "Connect with developers, teams, startups and companies around the world and start building the best solutions together.",
  },
  {
    title: "Direct communication",
    content:
      "Engage with our vibrant community, collaborate on exciting projects, exchange knowledge and ask for support  on our Discord channels.",
  },
  {
    title: "Seamless collaboration",
    content:
      "Access our technical documentation and GitHub repository to enhance your understanding and contribute to a thriving open-source ecosystem.",
  },
];

---

<Layout>
  <Cursors />
  <GradientBackground />
  <h1
    class="title text-4xl md:text-5xl lg:text-7xl text-center font-medium mt-40"
  >
    The <span>collaborative</span> framework to <br />
    shape your future
  </h1>
  <h2 class="px-12 text-sm lg:text-2xl mt-12 text-secondary">
    Boost your productivity and develop quality code with a<br />
    dynamic community you can rely on
  </h2>
  <br />
  <br />
  <StartNowButton color="green" />
  <div class="relative mt-48 md:pt-24 md:pb-44">
    <RectanglesBackground />
    <h3
      class="text-2xl md:text-4xl lg:text-5xl font-semibold h-24 flex flex-col sm:flex-row justify-center items-center"
    >
      <div class="flex items-center md:mx-3">
        Choose <img
          src={`${import.meta.env.BASE_URL}logos/logo_with_border.svg`}
          class="mx-3 h-8 md:h-10 lg:h-12"
        /> to deliver
      </div><div class="relative pr-4 py-3">
        quality code<img
          src={`${import.meta.env.BASE_URL}icons/code-snippet-02.svg`}
          class="absolute top-2 right-0 h-4 md:top-0 md:h-6"
        />
      </div>
    </h3>
    <h2 class="px-12 text-sm lg:text-2xl mt-6 lg:mt-12 text-secondary">
      The open-source Agile framework that automates repetitive tasks,<br />
      allowing you to focus on creating high-impact, valuable code.
    </h2>
    <div class="overflow-x-hidden relative">
      <div
        class="icon-box__container flex flex-row justify-center md:w-full md:mt-6 lg:mt-12 relative max-sm:animate-primary"
      >
        {
          programmingIcons.map((icon) => (
            <div class="md:px-5 flex justify-center items-center select-none ">
              <img src={icon.img} alt={icon.title} class="h-14 w-14 " />
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <Section className="w-full lg:px-12 m-auto rounded-none b-0" color="green" position="left">
    <div class="py-20 lg:py-32 flex flex-col lg:flex-row justify-center lg:items-center">
      <div class="text-left pr-4 lg:text-right lg:w-2/6 pl-6">
        <h3 class="title text-3xl md:text-4xl lg:text-5xl font-semibold">
          We <span>trust</span> your skills <br /> and ambitions
        </h3>
        <h2 class="text-sm lg:text-2xl mt-4 lg:mt-12 text-secondary">
          Create outstanding software, engage in collaborative<br />
          problem-solving and lead the next generation of innovators.
        </h2>
      </div>
      <div class="overflow-x-scroll mt-6 lg:mt-0">
        <div class="flex justify-between cards-container lg:ml-8">
          {
            trustCards.map((item) => (
              <Card className="p-2 ml-6 mt-4 text-left w-56 h-72">
                <div><img src={item.img} alt={item.title}/></div>
                <h2 class="text-lg mt-4 font-medium leading-7">{item.title}</h2>
                <p class="text-secondary text-sm leading-6">
                  {item.description}
                </p>
              </Card>
            ))
          }
        </div>
      </div>
    </div>
  </Section>
  <Section className="w-full lg:pr-12 m-auto rounded-none b-0" color="blue" position="right">
    <div
      class="py-20 lg:py-32 flex flex-col-reverse lg:flex-row justify-center lg:items-center"
    >
      <div class="overflow-x-scroll mt-6 lg:mt-0">
        <div class="flex ml-auto cards-container px-3.5">
          {
            improveCards.map((item) => (
              <Card className="p-2 mr-6 mt-4 text-left w-56 h-72">
                <img src={item.img} alt={item.title} />
                <h2 class="text-lg mt-2 font-medium leading-7">{item.title}</h2>
                <p class="text-secondary text-sm mt-2 leading-6">
                  {item.description}
                </p>
              </Card>
            ))
          }
        </div>
      </div>
      <div class="pl-6 text-right lg:text-left lg:w-2/6 pr-6">
        <h3 class="subtitle-2 text-3xl md:text-4xl lg:text-5xl font-semibold">
          We give you tools <br /> to <span>improve</span>
        </h3>
        <h2 class="text-sm lg:text-2xl mt-4 lg:mt-12 text-secondary">
          Develop outstanding software, share your problems and<br />
          solutions, and become a driver of change.
        </h2>
      </div>
    </div>
  </Section>

  <Section
    className="w-full p-12 lg:p-32 m-auto rounded-none b-0 relative"
    color=""
  >
    <GradientBackground />
    <div class="pt-24 pb-12">
      <h3 class="title text-3xl md:text-4xl lg:text-5xl font-semibold">
        We <span>collaborate</span> beyond code
      </h3>
      <h2 class="text-sm lg:text-2xl mt-4 lg:mt-12 text-secondary">
        Turn collaboration into innovation and follow the path of <br /> continuous
        improvement for long-term growth.
      </h2>
    </div>

    <div
      class="flex flex-col-reverse md:flex-row gap-x-2 sm:grid-cols-2 justify-center items-center"
    >
      <div>
        {
          collaborateSection.map((item) => (
            <>
              <div class="flex flex-col justify-start items-start">
                <h2 class="text-lg mt-4 font-medium leading-7">{item.title}</h2>
                <p class="text-secondary text-md leading-6 text-left my-4">
                  {item.content}
                </p>
              </div>
              <div class="border-gradient w-full" />
            </>
          ))
        }
      </div>
      <div class="xl:p-20">
        <Cursors />
        <img src="/img/terminale.png" alt="immagine terminale" />
      </div>
    </div>
  </Section>
  <div class="relative">
        <RectanglesBackground />
        <h3
        class="text-3xl md:text-4xl lg:text-5xl font-semibold h-24 flex flex-col sm:flex-row justify-center items-center"
        >
        <div class="w-fit relative p-1 sm:p-4 md:p-6 flex flex-col sm:flex-row">
        <div>Experience the</div> <div class="sm:pl-3 subtitle-3"><span>open-source</span> power</div><img src={`public/icons/cursor-box.svg`} class="absolute top-0 right-4 h-6 sm:right-0 sm:top-2 md:top-3 md:h-8"/>
        </div>
        </h3>
        <h2 class="px-12 text-sm lg:text-2xl mt-6 lg:mt-12 text-secondary">
        The open-source Agile framework that automates repetitive tasks,<br />
        allowing you to focus on creating high-impact, valuable code.
        </h2>
        <div class="overflow-x-auto">
        <div
            class="icon-box__container flex flex-row justify-center w-full md:mt-6 lg:mt-12"
        >
        </div>
        </div>
  </div>
  <div class="mt-40">
    <StartNowButton id="btnEndCta" color="rose" className="-mt-4" />
    <FooterCta />
  </div>
</Layout>

<style>
  .title > span {
    background: linear-gradient(90deg, #78e7c5, #9dffad);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle-2 > span {
    background: linear-gradient(90deg, #afb7fa, #6792ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle-3 > span {
    background: linear-gradient(135.75deg, #bb92ef 2.63%, #faa6a6 71.86%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .icon-box__container {
    width: 680px;
    margin: 30px auto;
    gap: 1rem;
    padding: 0 1rem;
    padding-top: 1rem;
    padding-bottom: 3.5rem;
    position: absolute;
  }

  .icon-box:not(:first-child) {
    border-left-width: 1px;
    border-left-style: solid;
    border-image: linear-gradient(
        to bottom,
        rgba(0, 0, 139, 0),
        rgba(255, 255, 255, 0.167),
        rgba(0, 0, 139, 0)
      )
      1;
  }

  .cards-container {
    width: 700px;
  }

  .border-gradient:not(:last-child) {
    border-bottom: 1px solid transparent;
    background: padding-box linear-gradient(rgb(4 6 22), rgb(4 6 22)),
      border-box
        linear-gradient(
          to right,
          rgba(255, 255, 255, 0.02),
          rgba(255, 255, 255, 0.2)
        );
  }

</style>
